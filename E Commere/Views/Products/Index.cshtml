@model IEnumerable<Product>
@{
	ViewData["Title"] = "Listing Product";
}

<div class="row"> 
	@foreach(var item in Model)
	{
		<div class="col-md-3"> 
			<div class="card"> 
				<a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id">
					<i class=" fas fa-reqular fa-pencil"></i>
				</a>
				<a asp-action="Delete" asp-route-id="@item.Id">
					<input type="submit" value="Delete" class="btn btn-outline-danger"
						   onclick="return confirm('Are you sure you want to delete this Product')" />
				</a>
				<a asp-action="Details" asp-route-id="@item.Id">
				<img src="@item.ImageUrl" alt="@item.Name" style="width:60%;height:300px" />
 				</a>
				<h1>@item.Name</h1>
				<p>@item.Price.ToString("c")</p>
				<p>@item.Description</p>
				<p style="color:@item.productColor">@item.productColor</p>
				<p>@item.Category.Name</p>
				<a class="btn btn-add-cart"
				   asp-action="AddToCart"
				   asp-controller="Orders"
				   asp-route-id="@item.Id">
					<i class="fa-solid fa-shopping-basket me-2"></i>
					Add To Cart
				</a>

			</div>
		</div>
	}
</div>
@await Html.PartialAsync("_CreateItem", "Products")
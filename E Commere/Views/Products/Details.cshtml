@model Product
@{
	ViewData["Title"] = $"Details of Product {Model.Name}";
}

<div class="row">
	<div class="col-md-8 offset-2">
		<div class="card">
			<img src="~/imeges/@Model.ImageUrl" alt="@Model.Name" style="width:90%;height:300px" />
			<h1>@Model.Name</h1>
			<p>@Model.Price.ToString("c")</p>
			<p>@Model.Description</p>
			<p style="color:@Model.productColor">@Model.productColor</p>
			<p>@Model.Category.Name</p>
			<button class="btn btn-outline-success">
				<i class="fa-reqular fa-shopping-basket mr-2" ></i>
				Add To Cart</button>
		</div>
	</div>
</div>

@model Category
@{
	ViewData["Title"] = "Category Details";
}

<div class="row">
	<div class="col-md-8 offset-2">
		<p>
			<h2 class="text-center">Detail @Model.Name Category</h2>
		</p>
	</div>
	<div class="col-md-6 offset-3"> 
			<div class="mb-3">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form-control" autocomplete="off" readonly/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Description" class="form-label"></label>
				<textarea asp-for="Description" class="form-control" readonly></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-info"style="float:right"> 
					<i class="fas fa-reqular fa-pencil"></i>
				</a>
				<a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>
			</div>
	</div>
</div>

@section Scripts
{
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

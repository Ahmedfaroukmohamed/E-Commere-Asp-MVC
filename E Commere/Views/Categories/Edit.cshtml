@model Category
@{
	ViewData["Title"] = "Update Category";
}

<div class="row">
	<div class="col-md-8 offset-2">
		<p>
			<h2 class="text-center">Edit @Model.Name Category</h2>
		</p>
	</div>
	<div class="col-md-6 offset-3">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-3">
				<label asp-for="Name" class="form-label">Category Name</label>
				<input asp-for="Name" class="form-control" autocomplete="off" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Description" class="form-label"></label>
				<textarea asp-for="Description" class="form-control"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input type="submit" value="Update" class="btn btn-outline-info float-end" />
				<a asp-action="Index" class="btn btn-outline-secondary">Show All Category</a>
			</div>
		</form>
	</div>
</div>

@section Scripts
{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
